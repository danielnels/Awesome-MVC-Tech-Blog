<section>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <div class="container mt-5 d-flex justify-content-center">
    <div class="row align-items-center text-center">
        <div class="col-12">
            <h2>Edit Post</h2>
        </div>
        <div class="col-12">
            <form class="edit-post-form">
                <div class="form-group">
                    <label for="post-title">Title</label>
                    <input class="form-control" type="text" id="post-title" name="post-title" value="{{post.title}}" />
                </div>
                <div class="form-group">
                    <label for="post-description">Description</label>
                    <textarea class="form-control" id="post-description" name="post-description">{{post.description}}</textarea>
                </div>
                 <button type="submit" class="btn btn-primary mt-3">Save post</button>
                 <button type="button" class="delete-post-btn btn btn-primary mt-3">Delete post</button>
            </form>
        </div>
        <div class="col-12 mt-5">
          <form class="comment-form">
            <div class="form-group">
              <textarea class="form-control" name="comment-body"></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary mt-3">add comment</button>
            </div>
          </form>
        </div>
        <div class="col-12 mt-2">
          {{> comments post.comments}}
        </div>
    </div>
  </div>
</section> 

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>